<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= title %></a>
        <p class="navbar-text"><%= description %></p>
  	  </div>
	</nav>
    <div class="container">
        <button class="btn btn-success pull-right" id="add">Add a new book</button>
        <table class="table table-hover">
            <thead><tr><th>Name</th><th>Thumbnail</th><th>Description</th><th>Year</th><th>Manage</th></tr></thead>
            <tbody>
            <% for(var i=0;i<list.length;i++) {%>
            <tr>
                <td><%= list[i]["name"] %></td>
                <td><%= list[i]["imgUrl"] %></td>
                <td><%= list[i]["description"] %></td>
                <td><%= list[i]["year"] %></td>
                <td>
                    <button type="button" value="<%= list[i]["id"]%>" class="btn btn-primary btn-sm editBtn">Edit</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger btn-sm delBtn dropdown-toggle" data-toggle="dropdown">
                            Delete <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/del/<%= list[i]["id"]%>" class="delLink">Delete It !</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <hr />
        <footer>
        <p><a href="#" target="_blank">Guc</a> 2014</p>
        </footer>
    </div>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script>
        $(function(){
            $('#add').click(function(){
                window.location.assign('/add');
            });
            $('.editBtn').click(function(){
                window.location.assign('/edit/' + $(this).val());
            });
        });
    </script>
  </body>
</html>